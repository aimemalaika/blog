<div class="container">
  <div class="row">
    <div class="profile-picture">
      <img src="<%= @user.Photo %>" alt="<%= @user.Name %>">
    </div>
    <div class="user-description">
      <h1 class="new-post-header">
        <%= @user.Name %>
        <a href="/users/<%= @user.id %>/posts" class="view-details">All Post</a>
      </h1>
    </div>
  </div>
  <h1 class="page-title"> New Post</h1>
  <div class="form post-new">
    <%= form_with model: [ @user, @user.posts.build ] do |form| %>
      <%= form.text_field :author_id, :type => 'hidden' %>
      <div class="form-group">
        <%= form.label :Title, "Post title" %>
        <%= form.text_field :Title, :class => "form-control", :required => "required", :placeholder => "Enter Title" %>
      </div>
      <div class="form-group">
        <%= form.label :Text, "Post content" %>
        <%= form.text_area :Text, :class => "form-control", :required => "required", :placeholder => "Enter your content", :rows => 10 %>
      </div>
      <%= form.submit "Create Post", :class => "form-button button-success" %>
    <% end %>
  </div>
</div>