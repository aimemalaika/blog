<div class="container">
  <div class="form login-form">
    <h1 class="page-title">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :required => "required",:placeholder => "Enter your email" %>
      </div>
      <%= f.submit "Send me reset password instructions", :class => "form-button button-success" %>
    <% end %>
    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
